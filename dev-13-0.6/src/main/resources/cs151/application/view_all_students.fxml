<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.geometry.Insets?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.application.ViewAllStudentsController">

    <top>
        <VBox spacing="10" style="-fx-padding:10;">
            <HBox spacing="10" alignment="CENTER_LEFT">
                <Label text="Search Students" style="-fx-font-size:18; -fx-font-weight:bold;"/>
                <Region HBox.hgrow="ALWAYS"/>
                <Button fx:id="backBtn" text="Back to Home" onAction="#onBackClick"/>
            </HBox>
            
            <!-- Search Controls -->
            <GridPane hgap="10" vgap="5" style="-fx-padding:10; -fx-background-color:#f5f5f5; -fx-background-radius:5;">
                <Label text="Search by:" GridPane.columnIndex="0" GridPane.rowIndex="0"/>
                
                <TextField fx:id="searchField" promptText="Enter search term..." 
                          prefWidth="200" GridPane.columnIndex="1" GridPane.rowIndex="0"/>
                
                <ComboBox fx:id="searchTypeCombo" prefWidth="150" GridPane.columnIndex="2" GridPane.rowIndex="0"/>
                
                <Button fx:id="searchBtn" text="Search" onAction="#onSearchClick" 
                       GridPane.columnIndex="3" GridPane.rowIndex="0"/>
                
                <Button fx:id="clearSearchBtn" text="Clear" onAction="#onClearSearchClick" 
                       GridPane.columnIndex="4" GridPane.rowIndex="0"/>
            </GridPane>
        </VBox>
    </top>

    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="colFullName"  text="Full Name"                prefWidth="120"/>
                <TableColumn fx:id="colAcademic"  text="Academic Status"          prefWidth="80"/>
                <TableColumn fx:id="colJob"       text="Job Status"               prefWidth="200"/>
                <TableColumn fx:id="colLangs"     text="Languages"                prefWidth="140"/>
                <TableColumn fx:id="colDBs"       text="Databases"                prefWidth="120"/>
                <TableColumn fx:id="colRole"      text="Role"                     prefWidth="100"/>
                <TableColumn fx:id="colComments"  text="Comments"                 prefWidth="250"/>
                <TableColumn fx:id="colWhitelist" text="Whitelist"                prefWidth="80"/>
                <TableColumn fx:id="colBlacklist" text="Blacklist"                prefWidth="80"/>
            </columns>
        </TableView>
    </center>
    
    <bottom>
        <HBox spacing="10" alignment="CENTER" style="-fx-padding:10;">
            <Region HBox.hgrow="ALWAYS"/>
            <Label fx:id="statusLabel" text="" style="-fx-text-fill:#2c3e50;"/>
        </HBox>
    </bottom>

</BorderPane>
