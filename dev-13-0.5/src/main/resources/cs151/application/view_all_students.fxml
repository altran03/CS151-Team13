<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>

<BorderPane xmlns:fx="http://javafx.com/fxml"
            fx:controller="cs151.application.ViewAllStudentsController">

    <top>
        <HBox spacing="10" style="-fx-padding:10;">
            <Label text="All Student Profiles" style="-fx-font-size:18; -fx-font-weight:bold;"/>
            <Region HBox.hgrow="ALWAYS"/>
            <Button fx:id="backBtn" text="Back to Home" onAction="#onBackClick"/>
        </HBox>
    </top>

    <center>
        <TableView fx:id="table">
            <columns>
                <TableColumn fx:id="colFullName"  text="Full Name"                prefWidth="120"/>
                <TableColumn fx:id="colAcademic"  text="Academic Status"          prefWidth="80"/>
                <TableColumn fx:id="colJob"       text="Job Status"               prefWidth="200"/>
                <TableColumn fx:id="colLangs"     text="Languages"                prefWidth="140"/>
                <TableColumn fx:id="colDBs"       text="Databases"                prefWidth="120"/>
                <TableColumn fx:id="colRole"      text="Role"                     prefWidth="100"/>
                <TableColumn fx:id="colComments"  text="Comments"                 prefWidth="320"/>
            </columns>
        </TableView>
    </center>

</BorderPane>
