<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.TextAlignment?>

<VBox alignment="CENTER" spacing="30.0" xmlns:fx="http://javafx.com/fxml"
      fx:controller="cs151.application.MainController">
    <padding>
        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0"/>
    </padding>

    <!-- Application Title -->
    <Label fx:id="appTitle" text="Student Tracker" 
           textAlignment="CENTER" wrapText="true">
        <font>
            <Font name="System Bold" size="28.0"/>
        </font>
    </Label>
    
    <!-- Subtitle -->
    <Label fx:id="subtitle" text="Faculty Student Management System" 
           textAlignment="CENTER" wrapText="true">
        <font>
            <Font name="System" size="16.0"/>
        </font>
    </Label>
    
    <!-- Welcome Message -->
    <Label fx:id="welcomeText" text="Welcome to your student management dashboard" 
           textAlignment="CENTER" wrapText="true">
        <font>
            <Font name="System" size="14.0"/>
        </font>
    </Label>
    
    <!-- Navigation Buttons -->
    <VBox alignment="CENTER" spacing="15.0">
        <Button fx:id="manageLanguagesBtn" text="Define Programming Languages" 
                prefWidth="250.0" prefHeight="40.0"
                onAction="#onManageLanguagesClick"/>

        <Button fx:id="defineStudentProfilesBtn" text="Define Student Profiles" 
                prefWidth="250.0" prefHeight="40.0"
                onAction="#onDefineStudentProfilesClick"/>

        <Button fx:id="manageStudentBtn" text="Search &amp; Manage Students (coming soon)"
                prefWidth="250.0" prefHeight="40.0"
                onAction="#onManageStudentClick"/>

        <Button fx:id="generateReportsBtn" text="Generate Student Reports (coming soon)" 
                prefWidth="250.0" prefHeight="40.0"
                onAction="#onGenerateReportsClick"/>
        
        <Button fx:id="exitBtn" text="Exit Application" 
                prefWidth="200.0" prefHeight="35.0"
                onAction="#onExitClick"/>
    </VBox>
</VBox>
